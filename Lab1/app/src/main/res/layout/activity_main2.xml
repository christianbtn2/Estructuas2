<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main2Activity">

    <TextView
        android:id="@+id/txtLista2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="407dp"
        android:layout_marginEnd="80dp"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="28dp"
        android:text="Carga de Archivos"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btnCargaArchivo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnBuscar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:text="Buscar"
        app:layout_constraintStart_toEndOf="@+id/txtRutaArchivo"
        tools:layout_editor_absoluteY="108dp"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/txtRutaArchivo"
        android:layout_width="246dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="108dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btnComprimir"
        android:layout_width="345dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="Comprimir"
        app:layout_constraintTop_toBottomOf="@+id/txtRutaArchivo"
        tools:layout_editor_absoluteX="20dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btnAnterior"
        android:layout_width="351dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="176dp"
        android:text="Lista de comprimidos"
        app:layout_constraintTop_toBottomOf="@+id/btnComprimir"
        tools:layout_editor_absoluteX="17dp"
        tools:ignore="MissingConstraints" />

</android.support.constraint.ConstraintLayout>